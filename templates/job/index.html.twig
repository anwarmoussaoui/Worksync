{% extends 'base.html.twig' %}

{% block title %}Jobs{% endblock %}

{% block body %}
        <div style="display:flex;justify-content:space-between">
    <h2>Jobs</h2>
    <a class="btn btn-secondary" href="{{ path('app_job_export') }}"><i class="ti ti-file"></i> Export</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.Title }}</td>
                <td>{{ job.description }}</td>
                <td>
                    <a href="{{ path('app_job_show', {'id': job.id}) }}"><i class="ti ti-eye"></i></a>
                    <a href="{{ path('app_job_edit', {'id': job.id}) }}"><i class="ti ti-edit"></i></a>
                    <a href="{{ path('app_job_delete', {'id': job.id}) }}"><i class="ti ti-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_job_new') }}">Create new</a>
{% endblock %}
