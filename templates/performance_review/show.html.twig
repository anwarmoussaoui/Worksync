{% extends 'base.html.twig' %}

{% block title %}PerformanceReview{% endblock %}

{% block body %}
    <h1>PerformanceReview</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance_review.id }}</td>
            </tr>
            <tr>
                <th>ReviewDate</th>
                <td>{{ performance_review.reviewDate ? performance_review.reviewDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ performance_review.rating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ performance_review.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_performance_review_index') }}">back to list</a>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <a class="btn btn-primary" href="{{ path('app_performance_review_edit', {'id': performance_review.id}) }}">edit</a>
    &nbsp;&nbsp;&nbsp;&nbsp;
    {{ include('performance_review/_delete_form.html.twig') }}
{% endblock %}
